<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gr.teicm.msc.igdb_mobile.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Spinner
        android:id="@+id/spinnerGenre"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewGenreLabel"
        android:layout_marginTop="14dp"
        android:layout_x="82dp"
        android:layout_y="79dp" />

    <TextView
        android:id="@+id/textViewTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="5dp"
        android:layout_y="23dp"
        android:text="Search"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTitleLabel"
        android:layout_x="63dp"
        android:layout_y="9dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewGenreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextTitle"
        android:layout_marginTop="26dp"
        android:layout_x="5dp"
        android:layout_y="84dp"
        android:text="Genre"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="341dp"
        android:text="Date "
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="332dp"
        android:text="From"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="111dp"
        android:layout_y="360dp"
        android:text="To"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/dateFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="182dp"
        android:layout_y="332dp"
        android:text="Select Date" />

    <TextView
        android:id="@+id/dateTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="182dp"
        android:layout_y="361dp"
        android:text="Select Date" />

    <Button
        android:id="@+id/clearFrom"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_x="256dp"
        android:layout_y="326dp"
        android:text="X"
        android:textSize="8sp" />

    <Button
        android:id="@+id/clearTo"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_x="256dp"
        android:layout_y="356dp"
        android:text="x"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="15dp"
        android:layout_x="4dp"
        android:layout_y="245dp"
