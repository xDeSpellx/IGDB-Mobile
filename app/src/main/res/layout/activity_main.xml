        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/priceFrom"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="231dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="67dp"
        android:layout_y="246dp"
        android:text="From"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/priceTo"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_x="267dp"
        android:layout_y="231dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="242dp"
        android:layout_y="245dp"
        android:text="To"
        android:textColor="@color/colorPrimary" />

    <Spinner
        android:id="@+id/spinnerPlatform"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_x="82dp"
        android:layout_y="123dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="62dp"
        android:layout_x="5dp"
        android:layout_y="128dp"
        android:text="Platform"
        android:textColor="@color/colorPrimary" />

    <Spinner
        android:id="@+id/spinnerPublisher"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="12dp"
        android:layout_x="82dp"
        android:layout_y="169dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewGenreLabel"
        android:layout_alignStart="@+id/textViewGenreLabel"
        android:layout_below="@+id/spinnerGenre"
        android:layout_marginTop="29dp"
        android:layout_x="5dp"
        android:layout_y="174dp"
        android:text="Publisher"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_x="134dp"
        android:layout_y="458dp"
        android:text="Search" />

</AbsoluteLayout>
